upstream django {
	server unix:///var/www/html/pyatra/pyatra.sock;
}

server {
	listen 80 default_server;
	listen [::]:80 default_server ipv6only=on;

	root /usr/share/nginx/html;
	index index.html index.htm;

	server_name localhost;

	location / {
		uwsgi_pass django;
		include /var/www/html/pyatra/conf/uwsgi_params;
	}

	location /static/ {
		alias /var/www/html/pyatra/staticfiles/;
	}

	location /media/ {
		alias /var/www/html/pyatra/media/;
	}
}
